#include "holberton.h"
/**
 * print_sign - prints sign of number
 * @n: inputed character
 * @return: 9
 */
int print_sign(int n)
{
  if (n < 0)
    {
      _putchar('-');
      return (-1);
    }
  if (n > 0)
    {
      _putchar('+');
      return (1);
    }
  if (n == 0)
    {
      _putchar('0');
      return (0);
    }
  return (9);
}
